---
import type { Playlist } from "../lib/data";

interface Props {
  playlist: Playlist;
}

const { playlist } = Astro.props;
const { id, title, cover, color, artists, albumId } = playlist;

const artistsString = artists.join(", ");
---

<li class="pl-2">
  <a
    href={`/playlist/${id}`}
    class="flex items-center gap-4 pl-1 rounded-md text-zinc-400 py-3 hover:bg-zinc-900 hover:text-white"
  >
    <picture class="h-12 w-12">
      <img
        src={cover}
        alt={`Cover of ${title} by ${artistsString}`}
        class="w-full h-full rounded-full object-cover"
      />
    </picture>
    <article class="truncate">
      <h2 class="text-sm">{title}</h2>
      <span class="text-xs">{artistsString}</span>
    </article>
  </a>
</li>
